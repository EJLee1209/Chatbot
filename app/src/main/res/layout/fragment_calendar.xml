<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="650dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".emotionCalendar.CalendarFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/calendarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감정 달력"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"/>

            <View
                android:id="@+id/emotionCalendar"
                android:layout_width="318dp"
                android:layout_height="360dp"
                android:background="@color/purple_200"
                app:layout_constraintTop_toBottomOf="@id/calendarTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/todayEmotionTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 느꼈던 감정"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="23dp"
                app:layout_constraintStart_toStartOf="@id/emotionCalendar"
                app:layout_constraintTop_toBottomOf="@id/emotionCalendar"/>

            <TextView
                android:id="@+id/todayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022년 8월 10일"
                android:textColor="#667080"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="@id/todayEmotionTitleTextView"
                app:layout_constraintBottom_toBottomOf="@id/todayEmotionTitleTextView"
                app:layout_constraintStart_toEndOf="@id/todayEmotionTitleTextView"
                android:layout_marginStart="79dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todayEmotionRecyclerView"
                android:layout_width="323dp"
                android:layout_height="105dp"
                app:layout_constraintTop_toBottomOf="@id/todayEmotionTitleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/todayEventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 있었던 일"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@id/todayEmotionRecyclerView"
                app:layout_constraintStart_toStartOf="@id/todayEmotionRecyclerView"/>

            <FrameLayout
                android:id="@+id/todayEventFrameLayout"
                android:layout_width="323dp"
                android:layout_height="239dp"
                app:layout_constraintTop_toBottomOf="@id/todayEventTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:layout_width="323dp"
                    android:layout_height="230dp"
                    android:src="@drawable/rectangle_2"
                    android:layout_marginTop="9dp"/>
                <TextView
                    android:id="@+id/addEmotionButton"
                    android:layout_width="168dp"
                    android:layout_height="40dp"
                    android:text="오늘의 기분 추가하기"
                    android:textColor="#667080"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/rectangle_1"
                    android:layout_gravity="center_horizontal" />
            </FrameLayout>

            <TextView
                android:id="@+id/finishWorkTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="끝낸 일"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@id/todayEventFrameLayout"
                app:layout_constraintStart_toStartOf="@id/todayEventFrameLayout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/finishWorkRecyclerView"
                android:layout_width="0dp"
                android:layout_height="94dp"
                app:layout_constraintTop_toBottomOf="@id/finishWorkTitleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>