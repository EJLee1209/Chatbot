<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".emotionCalendar.calendarFragment"
    android:background="@drawable/background_gradient">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/calenderbackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/emotionCalendar"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pre_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/left_arrow"/>
                <TextView
                    android:id="@+id/monthYearText"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="4월 2021"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/next_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/arrow_right_gray"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="일"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_dark"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="월"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="화"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="수"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="목"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="금"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="토"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todayEmotionTitle"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/emotionCalendar"
            app:layout_constraintStart_toStartOf="@id/emotionCalendar"
            android:background="@drawable/todayemotiontitlebackground"
            android:padding="5dp">
            <TextView
                android:id="@+id/todayEmotionTitletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 느꼈던 감정"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/todayEmotionTitle"
                app:layout_constraintTop_toTopOf="@+id/todayEmotionTitle"
                />
            <TextView
                android:id="@+id/todayEmotionTitleday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 날짜"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/todayEmotionTitletext"
                app:layout_constraintTop_toTopOf="@+id/todayEmotionTitle"
                android:layout_marginTop="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/go_add_emotion"
                android:src="@drawable/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@id/emotionCalendar"
                app:layout_constraintEnd_toEndOf="@id/emotionCalendar"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todayEmotionRecyclerView_glad"
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/emotionrecyclebackground"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toStartOf="@+id/todayEmotionRecyclerView_angry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/todayEmotionTitle" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todayEmotionRecyclerView_angry"
                android:layout_width="180dp"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/go_add_emotion"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/emotionrecyclebackground"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/todayEventTitle"
                app:layout_constraintTop_toBottomOf="@id/todayEmotionRecyclerView_glad"
                app:layout_constraintStart_toStartOf="@id/todayEmotionRecyclerView_glad"
                android:background="@drawable/todayeventtitlebackground"
                android:layout_marginTop="20dp">
            <TextView
                android:padding="5dp"
                android:id="@+id/todayEventTitletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 있었던 일"
                app:layout_constraintTop_toTopOf="@+id/todayEventTitle"
                app:layout_constraintStart_toStartOf="@+id/todayEventTitle"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/todayEventFrameLayout"
                android:layout_width="0dp"
                android:layout_height="239dp"
                app:layout_constraintTop_toBottomOf="@id/todayEventTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="23dp"
                android:layout_marginEnd="23dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@drawable/todayeventframebackground"
                    android:layout_marginTop="9dp"/>

            </FrameLayout>

            <TextView
                android:id="@+id/finishWorkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="끝낸 일"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/todayEventFrameLayout"
                app:layout_constraintStart_toStartOf="@id/todayEventFrameLayout"
                android:layout_marginTop="23dp"/>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/finishWorkRecyclerView"
                android:layout_width="0dp"
                android:layout_height="94dp"
                app:layout_constraintTop_toBottomOf="@id/finishWorkTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/finsihbackground"/>

            <View
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/finishWorkRecyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <FrameLayout
                android:id="@+id/menuFrame"
                android:layout_width="0dp"
                android:layout_height="280dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/splash_background_1_2"
                    android:scaleType="fitXY"
                    android:layout_gravity="bottom" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <FrameLayout
                        android:id="@+id/todoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="80dp">
                        <ImageView
                            android:id="@+id/select_rectangle_todo"
                            android:layout_width="65dp"
                            android:layout_height="64dp"
                            android:src="@drawable/select_rectangle"
                            android:layout_marginBottom="60dp"
                            android:visibility="invisible"/>

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/menu_button_background"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/menu_icon_todo"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/HomeButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp">


                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/menu_button_background"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/menu_icon_home"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/calendarButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="80dp">
                        <ImageView
                            android:id="@+id/select_rectangle_home"
                            android:layout_width="65dp"
                            android:layout_height="92dp"
                            android:src="@drawable/select_rectangle"
                            android:layout_marginBottom="100dp"/>
                        <ImageView
                            android:id="@+id/select_rectangle_calendar"
                            android:layout_width="65dp"
                            android:layout_height="64dp"
                            android:src="@drawable/select_rectangle"
                            android:layout_marginBottom="60dp"
                            android:visibility="invisible"/>

                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/menu_button_background"
                            android:layout_gravity="center"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/menu_icon_calendar"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


