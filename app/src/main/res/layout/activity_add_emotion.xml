<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".emotionCalendar.AddEmotionActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/addEmotionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 기분 추가하기"
                android:textSize="20sp"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"/>
            <TextView
                android:id="@+id/todayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022년 8월 10일"
                android:textColor="#667080"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/addEmotionTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="41dp"
                android:layout_marginStart="23dp"/>

            <ImageView
                android:id="@+id/leftArrowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow"
                app:layout_constraintTop_toTopOf="@id/addEmotionTitle"
                app:layout_constraintBottom_toBottomOf="@id/addEmotionTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="64dp"/>
            <ImageView
                android:id="@+id/checkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_check"
                app:layout_constraintTop_toTopOf="@id/addEmotionTitle"
                app:layout_constraintBottom_toBottomOf="@id/addEmotionTitle"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="17dp"/>

            <EditText
                android:id="@+id/todayEmotionEditTextView"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:gravity="top"
                android:hint="오늘 하루는 어땠나요?"
                android:ems="10"
                android:textSize="15sp"
                android:textColor="#BAC0CA"
                android:background="@drawable/memo_border"
                android:padding="12dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                app:layout_constraintTop_toBottomOf="@id/todayTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="11dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/emotionGraphRecyclerView"
                android:layout_width="0dp"
                android:layout_height="545dp"
                android:background="@color/purple_200"
                app:layout_constraintTop_toBottomOf="@id/todayEmotionEditTextView"
                app:layout_constraintStart_toStartOf="@id/todayEmotionEditTextView"
                app:layout_constraintEnd_toEndOf="@id/todayEmotionEditTextView"
                android:layout_marginTop="17dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="59dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emotionGraphRecyclerView"/>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>