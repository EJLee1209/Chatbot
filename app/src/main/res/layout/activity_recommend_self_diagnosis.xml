<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/background_gradient"
    tools:context=".selfDiagnosis.RecommendSelfDiagnosisActivity">

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자명"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="17dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="혹시 무슨 일 있었나요?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="17dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 2주간 우울한 감정이 지속되었어요."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="17dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="한번 자가진단을 해보는 건 어떨까요?"
        android:textColor="@color/black"
        android:layout_marginTop="23dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/selfDiagnosisButton"
        android:layout_width="139dp"
        android:layout_height="48dp"
        android:text="자가진단하기"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rectangle_3"
        android:layout_marginTop="47dp"/>

    <TextView
        android:id="@+id/backButton"
        android:layout_width="139dp"
        android:layout_height="48dp"
        android:text="뒤로가기"
        android:textSize="16sp"
        android:textColor="#667080"
        android:background="@drawable/rectangle_1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"
        android:gravity="center"/>

</androidx.appcompat.widget.LinearLayoutCompat>