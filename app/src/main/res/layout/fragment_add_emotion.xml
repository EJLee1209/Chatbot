<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".emotionCalendar.calendarFragment"
    >

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/addEmotionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 기분 추가하기"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"/>

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/addEmotionTitle"
                app:layout_constraintBottom_toBottomOf="@id/addEmotionTitle"
                android:layout_marginStart="19dp"/>
            <ImageView
                android:id="@+id/checkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/addEmotionTitle"
                app:layout_constraintBottom_toBottomOf="@id/addEmotionTitle"
                android:layout_marginEnd="19dp"/>

            <TextView
                android:id="@+id/todayDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022년 8월 10일"
                android:textSize="15sp"
                android:textColor="#667080"
                app:layout_constraintTop_toBottomOf="@id/addEmotionTitle"
                android:layout_marginTop="41dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="23dp"/>

            <EditText
                android:id="@+id/todayEmotionEditTextView"
                android:layout_width="0dp"
                android:layout_height="270dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/todayDate"
                android:layout_marginTop="11dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/memo_border"
                android:gravity="top"
                android:hint="오늘 하루는 어땠나요?"
                android:padding="12dp"
                android:textSize="15sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/emotionRecView"
                android:layout_width="0dp"
                android:layout_height="545dp"
                app:layout_constraintTop_toBottomOf="@id/todayEmotionEditTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:orientation="vertical"
                tools:listitem="@layout/emotion_item"
                />





        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>